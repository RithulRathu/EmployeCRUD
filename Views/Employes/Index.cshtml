@model IEnumerable<Employee.Models.Employe>
@{
    ViewBag.Title = "Index";
}


<div class="container">
    @if (TempData["AlertSucess"] != null)
    {
        <div class="alert alert-success">
            <strong>@TempData["AlertSucess"]</strong><button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    else if (TempData["AlertError"] != null)
    {
        <div class="alert alert-danger">
            <strong>@TempData["AlertError"]</strong><button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    <div class="row">
        <p class="text-center mb-4 mt-3">Created a basic ASP.NET MVC application that performs CRUD (Create, Read, Update, Delete) operations on a simple entity</p>
    </div>
    @if (Model.Count() > 0)
    {
        <h2 class="text-center mb-5 mt-2">View Employe List</h2>
        <table class="table table-borderless table-striped">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Phone)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">@item.Name</td>
                        <td class="align-middle">@item.Phone</td>
                        <td class="align-middle">@item.Email</td>
                        <td class="align-middle">
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-100" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-100" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="row">
            <p>Please add employe using above menu link or @Html.ActionLink("click here", "AddEmploye", "Employes", new { area = "" }, new { @class = "btn-link" })</p>
        </div>
    }
</div>